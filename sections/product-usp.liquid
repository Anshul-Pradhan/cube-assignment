<div class="product-usp">
  <div class="container-fluid">
    <div class="pu-in">
      {% for block in section.blocks %}
        <div class="item">
          <div class="pu-icon">
            <img
              src="{{ block.settings.img |  img_url: 'master' }}"
              alt="Icon"
              class="icon">
          </div>
          <div class="pu-txt">
            <p class="pu-head">
              {{ block.settings.head }}
            </p>
            <p class="pu-para">
              {{ block.settings.para }}
            </p>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</div>

{% schema %}
  {
    "name": "Product USP",
    "blocks": [
      {
        "type": "usp",
        "name": "USP",
        "settings": [
          {
            "type": "image_picker",
            "id": "img",
            "label": "Select Icon"
          }, {
            "type": "text",
            "id": "head",
            "label": "Heading"
          }, {
            "type": "textarea",
            "id": "para",
            "label": "Content"
          }
        ]
      }
    ]
  }
{% endschema %}